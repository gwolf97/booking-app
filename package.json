{ 
   "name": "mern-booking-app",
    "version": "1.0.0",
    "description": "MERN booking app",
    "engines": {
      "node": "16.15.1"
    },
    "main": "index.js",
    "type": "module",
  "scripts": {
    "install-frontend": "cd frontend && npm install --legacy-peer-deps",
    "build": "cd frontend && npm run build",
    "start": "node api/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "api": "nodemon api/index",
    "frontend": "npm start --prefix frontend",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm run install-frontend && npm run build --prefix frontend"
    },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "jsonwebtoken": "^8.5.1"
  }
}
